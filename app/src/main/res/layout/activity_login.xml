<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="zlian.netgap.ui.LoginActivity" >


    <!--2016/10/13 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enter_account_or_swipe_to_login"
        android:textColor="#f8fafa"
        android:id="@+id/textView"
        android:textSize="18dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rl_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp">

        <TextView
            android:id="@+id/version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:textColor="#f8fafa"
            android:textSize="18dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">


        <RelativeLayout
            android:id="@+id/rl_bt_customer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:background="@drawable/good_edittext_bg"
            android:gravity="center"
            android:visibility="gone">

            <!-- <Button -->
            <!-- android:layout_width="120dp" -->
            <!-- android:layout_height="45dp" -->
            <!-- android:text="蓝牙设备" -->
            <!-- android:id="@+id/btn_bt_device" /> -->

            <EditText
                android:id="@+id/et_customer_info"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/tv_customer"
                android:background="@null"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:saveEnabled="true"
                android:singleLine="true"
                android:textColor="#ffffff"
                android:visibility="invisible"/>


            <TextView
                android:id="@+id/tv_customer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/login_customer"
                android:gravity="center"
                android:paddingLeft="7dp"
                android:text="@string/customer"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:visibility="invisible"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_bt_device"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_bt_customer"
            android:layout_marginBottom="15dp"
            android:background="@drawable/good_edittext_bg"
            android:gravity="center" >

            <!-- <Button -->
            <!-- android:layout_width="120dp" -->
            <!-- android:layout_height="45dp" -->
            <!-- android:text="蓝牙设备" -->
            <!-- android:id="@+id/btn_bt_device" /> -->

            <EditText
                android:id="@+id/et_device_info"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/tv_device"
                android:background="@null"
                android:editable="false"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:textColor="#ffffff"
                android:textIsSelectable="false"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/tv_device"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/login_bluetooth"
                android:gravity="center"
                android:paddingLeft="7dp"
                android:text="@string/device"
                android:textColor="#ffffff"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/iv_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/arrow"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_userName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_bt_device"
            android:layout_marginBottom="15dp"
            android:background="@drawable/good_edittext_bg"
            android:gravity="center" >

            <!-- <TextView -->
            <!-- android:layout_width="120dp" -->
            <!-- android:layout_height="45dp" -->
            <!-- android:text="用户名:" -->
            <!-- android:id="@+id/tv_userName" -->
            <!-- android:textSize="18sp" -->
            <!-- android:gravity="center"/> -->

            <EditText
                android:id="@+id/et_userName"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/tv_account"
                android:background="@null"
                android:gravity="center_vertical"
                android:maxLength="16"
                android:paddingLeft="30dp"
                android:saveEnabled="true"
                android:singleLine="true"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/tv_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/login_account"
                android:gravity="center"
                android:paddingLeft="7dp"
                android:text="@string/account"
                android:textColor="#ffffff"
                android:textSize="18sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_userName"
            android:layout_marginBottom="15dp"
            android:background="@drawable/good_edittext_bg"
            android:gravity="center" >

            <!-- <TextView -->
            <!-- android:layout_width="120dp" -->
            <!-- android:layout_height="45dp" -->
            <!-- android:text="密    码:" -->
            <!-- android:textSize="18sp" -->
            <!-- android:id="@+id/tv_password" -->
            <!-- android:gravity="center"/> -->

            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/tv_password"
                android:background="@null"
                android:gravity="center_vertical"
                android:inputType="textPassword"
                android:maxLength="16"
                android:paddingLeft="30dp"
                android:saveEnabled="true"
                android:singleLine="true"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/tv_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/login_password"
                android:gravity="center"
                android:paddingLeft="7dp"
                android:text="@string/password"
                android:textColor="#ffffff"
                android:textSize="18sp" />
        </RelativeLayout>

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@id/rl_password"
            android:background="@drawable/login_button_normal"
            android:clickable="true"
            android:scaleType="center"
            android:text="@string/login"
            android:textColor="#ffffff"
            android:textSize="22sp" />
    </RelativeLayout>





    <!-- <RelativeLayout -->
    <!-- android:layout_above="@id/rl_content" -->
    <!-- android:layout_width="match_parent" -->
    <!-- android:layout_height="match_parent" -->
    <!-- android:gravity="center" -->
    <!-- android:id="@+id/rl_logo"> -->


    <!-- <ImageView -->
    <!-- android:layout_width="wrap_content" -->
    <!-- android:layout_height="wrap_content" -->
    <!-- android:src="@drawable/icon"/> -->


    <!-- </RelativeLayout> -->

</RelativeLayout>